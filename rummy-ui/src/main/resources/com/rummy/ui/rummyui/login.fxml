<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="292.0" prefWidth="304.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rummy.ui.rummyui.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox prefHeight="247.0" prefWidth="264.0">
      <children>
         <Label prefHeight="17.0" prefWidth="280.0" text="Welcome to Rummy!">
            <font>
               <Font size="23.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </Label>
         <Label text="User name:">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
         </Label>
         <TextField fx:id="username">
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
         </TextField>
         <Label text="Password:">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </Label>
         <PasswordField fx:id="password">
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
         </PasswordField>
         <Button mnemonicParsing="false" onAction="#onLoginClick" prefHeight="26.0" prefWidth="93.0" text="Login">
            <VBox.margin>
               <Insets top="30.0" />
            </VBox.margin>
         </Button>
      </children>
   </VBox>
</VBox>
